mixin sub-title(allSubTitles)
    .tutorial-title.tutorial-title__sub-title
        +create-sub-title()
        each subTitle in allSubTitles 
            +edit-sub-title(subTitle.text, subTitle.link)

block main
    h1.u-margin-top-2.u-margin-bottom-2 Python Ders Başlıkları Tablosu

    .tutorial-title.tutorial-title__main
        +create-title()
        each title in sidebar.linkGroup
            +edit-title(title.title)
            +sub-title(title.links)
